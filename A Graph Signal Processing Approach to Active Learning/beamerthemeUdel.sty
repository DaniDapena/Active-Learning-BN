% Title Page: (Remove the entire block to get a more boring default)
\RequirePackage{tikz}
\addtobeamertemplate{title page}{\vspace{3\baselineskip}}{}
\addtobeamertemplate{title page}{%
  \begin{tikzpicture}[remember picture,overlay]
    % Make the entire background UD blue
    \fill[UdelBlue,opacity=0.7] (-10cm,-10cm) rectangle (14cm,4cm);
    % The seal at the top left corner
    \node[xshift=0cm,yshift=0cm,opacity=0.25] (seal) at (2cm,-0.3\paperheight) {%
      \includegraphics[width=.8\paperwidth]{UDOfficialSeal}
    };
    % The UD logo at the bottom right
    \node[xshift=0cm,yshift=0cm,opacity=0.3] (udlogo) at (10cm,-0.75\paperheight) {%
      \includegraphics[width=.4\paperwidth]{InterlockingUD1whiteNoTM}
    };
    % University of Delaware logo at top right
    \node[xshift=0cm,yshift=0cm,opacity=0.7] (uofd) at (9.4cm,-0.9cm) {%
      \includegraphics[width=0.35\paperwidth]{UDPrimaryLogoWhite}
    };
  \end{tikzpicture}
}{}
\setbeamercolor{titlelike}{fg=,bg=}
\setbeamerfont{title page}{family=\rmfamily,series=\bfseries}
\setbeamercolor{title}{fg=white}
\setbeamercolor{subtitle}{fg=white}
\setbeamercolor{author}{fg=white}
\setbeamercolor{institute}{fg=white}
\setbeamercolor{date}{fg=white}
